{
  "name": "react-infinite-refresh-load-hook",
  "version": "1.0.0",
  "description": "An Infinite Scroll Hook in react that supports refresh and load more.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "prepare": "tsdx build",
    "ts-check": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "react",
    "react-hooks",
    "infinite-scroll",
    "react-component",
    "infinite",
    "scroll",
    "refresh"
  ],
  "author": "RenfrewChen",
  "module": "dist/react-infinite-refresh-load-hook.esm.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Renfrew/react-infinite-refresh-load-hook.git"
  },
  "bugs": {
    "url": "https://github.com/Renfrew/react-infinite-refresh-load-hook/issues"
  },
  "homepage": "https://github.com/Renfrew/react-infinite-refresh-load-hook/issues#readme",
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run ts-check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
